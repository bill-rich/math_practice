<html>
	<head>
		<title>Math Practice</title>
	</head>
	<body>
		<table width="100%" height="100%" border="0">
			<tr><td height="10%" align="center" colspan="2">Score: <%= $score %></td></tr>
			<tr><td height="10%" align="center" colspan="2">
			<% if $result == "correct" %>
				<font color="green"><%= "Your last problem was #{$result}" %></font>
			<% end %>
			<% if $result == "incorrect" %>
				<font color="red"><%= "Your last problem was #{$result}" %></font>
			<% end %>
			</td></tr>
			<tr><td height="10%" align="center" colspan="2"><%= "#{$time_left} seconds left" %>
			<form action="/" method="post">
				<tr><td></td><td height="30"><font size="36"><%= $a %></font></td></tr>
				<tr><td align="right" height="30"><font size="36"><%= $operation %></font></td><td><font size="36"><%= $b %></font></td></tr>
				<tr><td height="10" colspan="2"><hr></td></tr>
				<tr><td colspan="2" align="center" height="30"><input name="answer" type="text" style="font-size:30px" autofocus></td></tr>
				<input name="a" type="hidden" value="<%= $a %>">
				<input name="b" type="hidden" value="<%= $b %>">
				<input name="operation" type="hidden" value="<%= $operation %>"><br>
				<tr><td colspan="2" align="center"><input name="submit" type="submit"></td></tr>
			</form>
		</table>
	</body>
</html>
